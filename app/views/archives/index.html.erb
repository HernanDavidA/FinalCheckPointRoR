<p class="text-green-500"><%= notice %></p>

<% content_for :title, t("archive.index") %>

<%= render "lenguages" %>

<div class="container mx-auto p-6">
  <h1 class="text-4xl font-semibold text-center text-gray-800 mb-6"><%= t("archive.index") %></h1>

  <div id="archives" class="space-y-6">
    <% @archives.each do |archive| %>
      <div class="bg-white rounded-lg shadow-md p-4 hover:shadow-lg transition-all">
        <%= render archive %>
        <div class="mt-4">
          <%= link_to t("archive.show_this_archive"), archive, class: "text-blue-500 hover:text-blue-700" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-6 text-center">
    <%= link_to t("archive.new_archive"), new_archive_path, class: "text-blue-500 hover:text-blue-700 text-lg" %>
  </div>
</div>
