<%= form_with(model: archive, class: "max-w-lg mx-auto p-6 bg-white rounded-lg shadow-md") do |form| %>
  <% if archive.errors.any? %>
    <div class="bg-red-100 text-red-800 p-4 rounded-md mb-6">
      <h2 class="font-semibold"><%= pluralize(archive.errors.count, "error") %> <%= t("archive.erorrs_count") %></h2>
      <ul class="list-disc pl-6">
        <% archive.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :title, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_area :description, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", rows: 4 %>
  </div>

  <div class="mb-4">
    <%= form.label :file, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.file_field :file, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.submit "Submit", class: "w-full bg-blue-500 text-white font-semibold py-2 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
<% end %>
